<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:me='urn:import:hu.nooon.dobido.client.customwidget'>


    <ui:style>
        .main {
        width: 835px;
        max-width: 835px;
        text-align: left;
        border:2px solid;
        border-radius:25px;
        }

        .header {
        height: 109px;
        max-height: 109px;
        border:2px solid;
        border-radius:25px;
        }

        .middle {
        width: 835px;
        overflow: auto;
        border:2px solid;
        border-radius:25px;
        }

        .left {
        float: left;
        width: 166px;
        padding: 0;
        margin: 0;
        padding-top: 14px;
        border:2px solid;
        border-radius:25px;
        }

        .right {
        width: 621px;
        float: left;
        padding-left: 19px;
        min-height: 424px;
        border:2px solid;
        border-radius:25px;
        }

        .productsMenu {
        width: 166px;
        padding:0;
        margin:0;
        padding-bottom: 1px;
        border:2px solid;
        border-radius:25px;
        }

        .siteMenu {
        width: 95%;
        height: 28px;
        padding:0;
        margin:0;
        padding-bottom: 1px;
        border:2px solid;
        border-radius:25px;
        }

        .footer {
        height: 28px;
        max-height: 28px;
        background-position: bottom;
        border:2px solid;
        border-radius:25px;
        }
    </ui:style>


    <g:HorizontalPanel width="100%" height="100%">
        <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">


            <g:HTMLPanel styleName="{style.main}">
                <g:HTMLPanel ui:field='header' styleName="{style.header}">
                    <g:Label text="HEADER"/>
                </g:HTMLPanel>

                <g:HTMLPanel styleName="{style.middle}">

                    <g:HTMLPanel styleName="{style.left}">
                        <g:Label text="LEFT"/>
                        <g:HTMLPanel ui:field='productsMenu' styleName="{style.productsMenu}">
                            <g:Label text="PRODUCTS MENU"/>
                        </g:HTMLPanel>
                    </g:HTMLPanel>

                    <g:HTMLPanel ui:field='clientArea' styleName="{style.right}">
                        <g:HTMLPanel ui:field='siteMenu' styleName="{style.siteMenu}">
                            <g:Label text="SITE MENU"/>
                        </g:HTMLPanel>
                    </g:HTMLPanel>

                </g:HTMLPanel>

                <g:HTMLPanel styleName="{style.footer}">
                    <g:Label text="FOOTER"/>
                </g:HTMLPanel>


            </g:HTMLPanel>
        </g:cell>
    </g:HorizontalPanel>

</ui:UiBinder>