<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style src="LoadingWidget.css"/>

	<g:AbsolutePanel ui:field="container">
		<g:AbsolutePanel ui:field="curtain"></g:AbsolutePanel>

		<g:HTMLPanel ui:field="loading" addStyleNames="{style.loading}">
			<g:Label text="Loading..." addStyleNames="{style.label}" />
		</g:HTMLPanel>
	</g:AbsolutePanel>

</ui:UiBinder>